---
import Layout from '../layouts/Layout.astro'
import Badge from '../components/Badge.astro'
import LinkedIn from '../components/icons/LinkedIn.astro'
import GithubIcon from '../components/icons/Github.astro'
import MailIcon from '../components/icons/Mail.astro'
import SocialPill from '../components/icons/SocialPill.astro'
import Experience from '../components/Experience.astro'
import SectionContainer from '../components/SectionContainer.astro'
import BriefCase from '../components/icons/BriefCase.astro'
import CodeIcon from '../components/icons/Code.astro'
import Projects from '../components/Projects.astro'
import Profile from '../components/icons/Profile.astro'
import AboutMe from '../components/AboutMe.astro'
---

<Layout
  title="Portfolio de MAFABIAN - Data Engineer and Software Engineer"
  description="Contrata a Crisleo para crear tu aplicación web o móvil"
>
  <main class="px-4">
    <SectionContainer class="py-44 pb-32">
      <img
        class="rounded-full size-12 mb-4"
        src="https://scontent.fgua2-2.fna.fbcdn.net/v/t1.18169-9/11753662_10204866042719070_7589377524319270095_n.jpg?_nc_cat=109&ccb=1-7&_nc_sid=7a1959&_nc_ohc=EDqg7LKJzmgAX99P7NF&_nc_ht=scontent.fgua2-2.fna&oh=00_AfAVRR4UQr0Oj00gsdRlWycl3iVLhQ9VUFPPATlZIx7N2Q&oe=65BDA985"
        alt="crisleo photo"
      />
      <h1 class="text-gray-900 dark:text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10">
        Hey, soy Cristian
        <a
          href="https://www.linkedin.com/in/miguel-fabian02/"
          target="_blank"
          rel="noopener"
          class="flex justify-center items-center hover:scale-105 transition"
        >
          <Badge>Disponible para trabajar</Badge>  
        </a>
      </h1>
      <h2 class="text-xl lg:text-2xl text-balance max-w-[700px] text-black dark:text-white">
        <span>Desarrollador y Programador Web.</span><span class="text-red-800 dark:text-red-200"> De Quetzaltenango, Guatemala</span>. <span class="text-sky-800 dark:text-sky-200"
          >Especializado en la creación de aplicaciones a medida.</span
        >
      </h2>

      <nav class="flex gap-4 mt-8 flex-wrap ">
        <SocialPill href="https://www.linkedin.com/in/cristian-poroj/">
          <LinkedIn class="size-4 md:size-6" />
          LinkedIn
        </SocialPill>
        <SocialPill href="https://github.com/Crisleop21">
          <GithubIcon class="size-4 md:size-6" />
          Github
        </SocialPill>
        <SocialPill href="mailto:cristian.poroj.developer@gmail.com">
          <MailIcon class="size-4 md:size-6" />
          cristian.poroj.developer@gmail.com
        </SocialPill>
      </nav>
    </SectionContainer>

    <SectionContainer id="experiencia">
      <h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-black/80 dark:text-white/80">
        <BriefCase class="size-7" />
        Experiencia Laboral
      </h2>
      <Experience />
    </SectionContainer>

    <SectionContainer id="proyectos">
      <h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-black/80 dark:text-white/80">
        <CodeIcon class="size-7" />
        Proyectos
      </h2>
      <Projects />
    </SectionContainer>

    <SectionContainer id="sobre-mi">
      <h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-black/80 dark:text-white/80">
        <Profile class="size-7" />
        Sobre mi
      </h2>
      <AboutMe />
    </SectionContainer>

    
  </main>
</Layout>
